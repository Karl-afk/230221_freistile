---
const { tool, amount } = Astro.props;
const progressWidth = amount + '%';
---

<style define:vars={{ progressWidth }}>
  .kw-progress-bar {
    width: var(--progressWidth);
    height: 25px;
    background-color: #000;
  }
</style>
<div class="kw-row kw-margin-top">
  <div class="kw-col m4 l3">
    <h3>{tool}</h3>
  </div>
  <div class="kw-col m12 l9">
    <div class="kw-light kw-margin-top" style="background-color: #F6EBDF;">
      <div class="kw-black kw-progress-bar"></div>
    </div>
  </div>
</div>
